{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": ["es6", "dom", "ES2022"],
    	"jsx": "react",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		// "noImplicitAny": false,
    	"esModuleInterop": true,
		// "suppressImplicitAnyIndexErrors": true,
		// "ignoreDeprecations": "5.0",
		// "skipLibCheck": true,
	},
  	"exclude": ["node_modules", ".vscode-test", "node_modules/viem", "node_modules/@zerodev/sdk"]
}
